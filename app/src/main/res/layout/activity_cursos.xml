<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ActivityCursos">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/strCursoTitulo"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCursoPortugol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoPortugol"
                android:onClick="clickCursoPortugol"
                app:srcCompat="@drawable/cursoportugol" />

            <ImageView
                android:id="@+id/imgCursoLingC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoLingC"
                android:onClick="clickCursoLingC"
                app:srcCompat="@drawable/cursolingc" />

            <ImageView
                android:id="@+id/imgCursoKotlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoKotlin"
                android:onClick="clickCursoKotlin"
                app:srcCompat="@drawable/cursokotlin" />

            <ImageView
                android:id="@+id/imgCursoLingCSharp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoLingCSharp"
                android:onClick="clickCursoCursoLingCSharp"
                app:srcCompat="@drawable/cursolingcsharp" />

            <ImageView
                android:id="@+id/imgCursoAndroid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoAndroid"
                android:onClick="clickCursoAndroid"
                app:srcCompat="@drawable/cursoandroid" />

            <ImageView
                android:id="@+id/imgCursoPHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoPHP"
                android:onClick="clickCursoPHP"
                app:srcCompat="@drawable/cursophp" />

            <ImageView
                android:id="@+id/imgCursoProdVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/strCursoProdVideos"
                android:onClick="clickCursoProdVideos"
                app:srcCompat="@drawable/cursovideo" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnCursosVoltar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/cianoEscuro"
        android:onClick="back"
        android:text="@string/strBtnVoltar"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>